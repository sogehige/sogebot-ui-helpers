{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "noResolve": false,
    "baseUrl": "./",
    "sourceMap": true,
  },
  "include": [
    "*.ts",
    "**/*.ts",
  ],
  "exclude": [
    "src/bot",
    "node_modules"
  ]
}